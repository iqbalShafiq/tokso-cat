<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btnAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        style="?android:attr/borderlessButtonStyle"
        android:gravity="start|center_vertical"
        android:background="@drawable/bg_radius_left"
        android:fontFamily="@font/poppins_medium"
        android:paddingVertical="14dp"
        android:layout_marginVertical="11dp"
        android:textAllCaps="false"
        android:textColor="@color/red_primary"
        android:textSize="18sp"
        android:paddingHorizontal="30dp"
        app:layout_constraintEnd_toStartOf="@id/llDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="What do you think about the liveliness of your cat? " />

    <LinearLayout
        android:id="@+id/llDelete"
        android:layout_width="62dp"
        android:layout_height="0dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/bg_radius_right"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/btnAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnAnswer">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:contentDescription="@string/icon_trash"
            android:src="@drawable/ic_trash" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>